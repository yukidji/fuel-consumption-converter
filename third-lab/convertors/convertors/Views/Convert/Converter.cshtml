@model lab3.Models.convert

@{ Layout = null;}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <title>Converter</title>
</head>

<body>
    <div id="content">
        <h1>Конвертер расхода топлива<br>ASP.NET MVC</h1>
        <div id="label-inputData">Исходные данные:</div>
        @using (Html.BeginForm("Converter", "Convert", FormMethod.Post))
        {
            <div id='form-data'>
                <input type="text" name="inputData" id="inputData" value="@Model.InputData">
                <select id='selectKm' name="selectKm">
                    @{
                        foreach (var option in Model.Options) {
                            @:<option value="@option.Val" @option.Disabled>@option.Text</option>
                        }
                    }
                </select>
            </div>
            <div id='result'>
                <p class='label-result'><b>Метрический:</b></p>
                <div class='poles-result'>
                    <div>
                        <div class='data-result' id='1'>@Model.LonKm</div><span>Литров на км</span>
                    </div>
                    <div>
                        <div class='data-result' id='2'>@Model.Lon10Km</div><span>Литров на 10 км</span>
                    </div>
                    <div>
                        <div class='data-result' id='3'>@Model.Lon100Km</div><span>Литров на 100 км</span>
                    </div>
                    <div>
                        <div class='data-result' id='4'>@Model.KMonL</div><span>Километров на литр</span>
                    </div>
                </div>
                <hr>
                <p class='label-result'><b>US (США):</b></p>
                <div class='poles-result'>
                    <div>
                        <div class='data-result' id='5'>@Model.MonG_US</div><span>Миль на галон</span>
                    </div>
                    <div>
                        <div class='data-result' id='6'>@Model.Gon100M_US</div><span>Галонов на 100 миль</span>
                    </div>
                </div>
                <hr>
                <p class='label-result'><b>UK (Англия):</b></p>
                <div class='poles-result'>
                    <div>
                        <div class='data-result' id='7'>@Model.MonG_UK</div><span>Миль на галон</span>
                    </div>
                    <div>
                        <div class='data-result' id='8'>@Model.Gon100M_UK</div><span>Галонов на 100 миль</span>
                    </div>
                </div>
            </div>
            <hr>
        <div>
            <button type="submit" id="calc" name="calculate">Рассчитать</button>
        </div>
        }
    </div>
</body>

</html>
